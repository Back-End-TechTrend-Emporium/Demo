{
    "info": {
        "name": "TechTrend Emporium API",
        "description": "E-commerce API for TechTrend Emporium platform",
        "version": "1.0.0",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{authToken}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        },
        {
            "key": "authToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Password123!\",\n  \"confirmPassword\": \"Password123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/register",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "auth", "register"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.token) {",
                                    "        pm.collectionVariables.set('authToken', response.token);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@techtrendemporium.com\",\n  \"password\": \"Admin123!\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/login",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "auth", "login"]
                        }
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.success && response.token) {",
                                    "        pm.collectionVariables.set('authToken', response.token);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/me",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "auth", "me"]
                        }
                    }
                },
                {
                    "name": "Logout",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/auth/logout",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "auth", "logout"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Categories",
            "item": [
                {
                    "name": "Get All Categories",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/categories",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "categories"]
                        }
                    }
                },
                {
                    "name": "Get Category by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/categories/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "categories", "1"]
                        }
                    }
                },
                {
                    "name": "Create Category",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"New Category\",\n  \"description\": \"Category description\",\n  \"imageUrl\": \"https://example.com/image.jpg\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/categories",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "categories"]
                        }
                    }
                },
                {
                    "name": "Sync Categories from FakeStore",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/categories/sync-fakestore",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "categories", "sync-fakestore"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Products",
            "item": [
                {
                    "name": "Get All Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/products?page=1&pageSize=10",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "products"],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "pageSize",
                                    "value": "10"
                                },
                                {
                                    "key": "categoryId",
                                    "value": "1",
                                    "disabled": true
                                },
                                {
                                    "key": "minPrice",
                                    "value": "10",
                                    "disabled": true
                                },
                                {
                                    "key": "maxPrice",
                                    "value": "100",
                                    "disabled": true
                                },
                                {
                                    "key": "search",
                                    "value": "product",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Product by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/products/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "products", "1"]
                        }
                    }
                },
                {
                    "name": "Create Product",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"New Product\",\n  \"description\": \"Product description\",\n  \"price\": 99.99,\n  \"imageUrl\": \"https://example.com/product.jpg\",\n  \"categoryId\": 1,\n  \"stockQuantity\": 10\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/products",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "products"]
                        }
                    }
                },
                {
                    "name": "Search Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/products/search?term=electronics",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "products", "search"],
                            "query": [
                                {
                                    "key": "term",
                                    "value": "electronics"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Featured Products",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/products/featured",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "products", "featured"]
                        }
                    }
                },
                {
                    "name": "Sync Products from FakeStore",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/products/sync-fakestore",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "products", "sync-fakestore"]
                        }
                    }
                }
            ]
        },
        {
            "name": "Cart",
            "item": [
                {
                    "name": "Get Cart",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/cart",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "cart"]
                        }
                    }
                },
                {
                    "name": "Add Item to Cart",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"productId\": 1,\n  \"quantity\": 2\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/cart/items",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "cart", "items"]
                        }
                    }
                },
                {
                    "name": "Update Cart Item",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"quantity\": 3\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/cart/items/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "cart", "items", "1"]
                        }
                    }
                },
                {
                    "name": "Remove Cart Item",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/cart/items/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "cart", "items", "1"]
                        }
                    }
                },
                {
                    "name": "Clear Cart",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/cart",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "cart"]
                        }
                    }
                },
                {
                    "name": "Calculate Cart Total",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"couponCode\": \"WELCOME10\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/cart/calculate-total",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "cart", "calculate-total"]
                        }
                    }
                }
            ]
        }
    ]
}